{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2022",
    "outDir": "./myDist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@sharedTypes": ["../sharedTypes/index.d.ts"]
    }
  },
  "exclude": ["node_modules"]
}
